{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es5",
            "dom"
        ],
        "allowJs": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        "src",
        "typings.d.ts"
    ],
}
